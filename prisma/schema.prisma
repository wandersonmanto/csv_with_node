generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("FILE")
}

model Products {
  id Int @id @unique @default(autoincrement())
  descricao String
  estoque Int

  @@map("products")
}

model User {
  id Int @id @unique @default(autoincrement())
  name String
  function String

  @@map("user")
}